      <p class="product__description"> {{descriptions}} </p>
      <div class="product__action">
        {{#with link}}
        {{#each text}}
        <a href="{{../link}}" class="links product--link link--blue-light"> {{this}} </a>
        {{/each}}
        {{/with}}
      </div>
    </div>
  </section>
  {{/with}}

