<div class="page">
  {{#with header}}
  <section class="header">
    <header class="header__content">
      <div class="header__block">
        <img src="/svg/apple.svg" alt="Apple icon" class="header__icon">
        <nav class="header__block">
          {{#each links}}
          <a href="{{url}}" class="links header__link"> {{text}} </a>
          {{/each}}
        </nav>
      </div>
      <div class="header__block">
        <img src="/svg/search.svg" alt="Search icon" class="header__icon">
        <img src="/svg/profile.svg" alt="Profile icon" class="header__icon">
      </div>
    </header>
  </section>
  {{#with ad}}
  <section class="header header--ad">
    <div class="header__content padding--small">
      <div class="ad_info"> {{title}} </div>
      {{#with link}}
      <div>
        <a href="{{url}}" class="links link--blue-dark"> {{text}} </a>
      </div>
      {{/with}}
    </div>
  </section>
  {{/with}}
  {{/with}}

  {{#with iphone_pro}}
